.container
  = render "order_items/header"

  .sign_in
    = link_to image_tag("facebook_ico.png", class: 'facebook_image'), customer_omniauth_authorize_path(:facebook), class: 'facebook_auth_img_link'
    %p= t('.or')
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.email_field :email, autofocus: true, placeholder: 'your email', class: 'email_field'

      .field
        = f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'password_field'
        %br
      = link_to t('.forgot_passwrd'), new_customer_password_path, class: 'forgot_password_link'

      .sign_in_block_button
        .actions
          = f.submit t('.submit'), class: 'sign_in_button'

        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me

    %p
      #{t('.dont_have_account')}
      = link_to t('.sign_up'), new_customer_registration_path
