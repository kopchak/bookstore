.container
  = render "order_items/header"
  .sign_in
    = link_to image_tag("facebook_ico.png", class: 'facebook_image'), customer_omniauth_authorize_path(:facebook), class: 'facebook_auth_img_link'
    %p= t('.or')
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .field
        = f.email_field :email, autofocus: true, placeholder: 'your email', class: 'email_field'

      .field
        = f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'password_field'

      .actions
        = f.submit t('.submit')

    %p
      #{t('.have_account')}
      = link_to t('.sign_in'), new_customer_session_path
